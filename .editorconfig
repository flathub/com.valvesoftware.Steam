root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 4

[*.{appdata,metainfo}.xml]
indent_style = space
indent_size = 2

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.sh]
charset = utf-8
indent_style = space
indent_size = 4

[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
